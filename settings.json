// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "buffer_line_height": "comfortable",
  "inlay_hints": {
    "show_value_hints": false,
  },
  "inline_code_actions": false,
  "terminal": {
    "font_size": 18.0,
    "font_family": "Iosevka",
  },
  "icon_theme": "Catppuccin Frappé",
  "minimap": {
    "show": "always",
  },
  "disable_ai": false,
  "experimental.theme_overrides": {
    "syntax": {
      "comment": {
        "font_style": "normal",
      },
    },
  },
  "ui_font_family": "Iosevka",
  "buffer_font_family": "Iosevka",
  "buffer_font_fallbacks": ["JetBrainsMono Nerd Font Mono"],
  "agent_servers": {
    "opencode": {
      "type": "registry",
    },
    "Kimi Code CLI": {
      "type": "custom",
      "command": "kimi",
      "args": ["acp"],
      "env": {},
    },
  },
  "agent": {
    // "model_parameters": [],
    "default_profile": "ask",
    "always_allow_tool_actions": true,
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-5",
    },
    "default_model": {
      "provider": "anthropic",
      "model": "Minimax-M2.1",
    },
  },
  "languages": {
    "Python": {
      "language_servers": ["basedpyright"], // 기본값
      "formatter": "language_server", // 기본값 (러프 사용됨)
      "format_on_save": "on", // 기본 동작
    },
    "Go": {
      "language_servers": ["gopls"],
    },
  },
  "vim_mode": true,
  "ui_font_size": 18.0,
  "buffer_font_size": 18.0,
  "theme": {
    "mode": "dark",
    "light": "Rosé Pine Moon",
    "dark": "Evergarden Fall (Hybrid)",
  },
  "edit_predictions": {
    "provider": "zed",
    "disabled_globs": [
      "**/.env*",
      "**/*.pem",
      "**/*.key",
      "**/*.cert",
      "**/*.crt",
      "**/secrets.yml",
    ],
  },
}
