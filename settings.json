// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "terminal": {
    "font_size": 15.0,
    "font_family": "D2Coding",
  },
  "icon_theme": "Catppuccin Frappé",
  "minimap": {
    "show": "always",
  },
  "disable_ai": false,
  "ui_font_family": "D2Coding ligature",
  "buffer_font_family": "D2Coding",
  "buffer_font_fallbacks": ["D2Coding"],
  "language_models": {
    "anthropic": {
      "api_url": "https://api.minimax.io/anthropic",
      "available_models": [
        {
          "name": "Minimax-M2.1",
          "max_tokens": 3000000,
        },
      ],
    },
  },
  "agent": {
    // "model_parameters": [],
    "default_profile": "ask",
    "always_allow_tool_actions": true,
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-5",
    },
    "default_model": {
      "provider": "zed.dev",
      "model": "gemini-3-pro-preview",
    },
  },
  "languages": {
    "Python": {
      "language_servers": ["basedpyright"], // 기본값
      "formatter": "language_server", // 기본값 (러프 사용됨)
      "format_on_save": "on", // 기본 동작
    },
    "Go": {
      "language_servers": ["gopls"],
    },
  },
  "features": {
    "edit_prediction_provider": "zed",
  },
  "vim_mode": true,
  "ui_font_size": 15.0,
  "buffer_font_size": 15.0,
  "theme": {
    "mode": "system",
    "light": "Rosé Pine Moon",
    "dark": "Gruvbox Dark",
  },
  "edit_predictions": {
    "disabled_globs": [
      "**/.env*",
      "**/*.pem",
      "**/*.key",
      "**/*.cert",
      "**/*.crt",
      "**/secrets.yml",
    ],
  },
}
