[
  {
    "context": "Terminal",
    "bindings": {
      "shift-enter": ["terminal::SendText", "\u001b\r"],
    },
  },
  {
    "context": "Editor && vim_mode == visual && !menu",
    "bindings": {
      "shift-j": "editor::MoveLineDown",
      "shift-k": "editor::MoveLineUp",
    },
  },
  {
    "context": "Editor && vim_mode == visual",
    "bindings": {
      "ctrl-[": "editor::Outdent",
      "ctrl-]": "editor::Indent",
    },
  },
  {
    "context": "Editor && vim_mode == active",
    "bindings": {
      "ctrl-c": "editor::Copy",
      "ctrl-v": "editor::Paste",
    },
  },
  {
    "context": "VimControl && !menu",
    "bindings": {
      "ctrl-c": "editor::Copy",
      "ctrl-v": "editor::Paste",
    },
  },
]
